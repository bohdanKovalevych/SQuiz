@using SQuiz.Client.Interfaces
@using SQuiz.Client.Themes
@inherits LayoutComponentBase
@inject IThemeService ThemeService

<MudThemeProvider Theme="MainTheme.Instance.Value" @bind-IsDarkMode="ThemeService.IsDarkMode"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16">
            <MudGrid Class="d-flex flex-row justify-center">
                <MudItem sm="11" lg="9">
                    <MudPaper Elevation="12">
                        @Body
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    protected override Task OnInitializedAsync()
    {
        return ThemeService.InitializeAsync();
    }
}