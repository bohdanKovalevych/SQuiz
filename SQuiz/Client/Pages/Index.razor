@page "/"
@using SQuiz.Shared.Models
@using SQuiz.Client.Shared.Components
@using SQuiz.Client.Pages.EditQuizSteps
@using SQuiz.Client.Pages.ManageQuizes

@inject HttpClient Http

<div class="container">
    <PageTitle>Quizzes</PageTitle>
    <AuthorizeView>
        <Authorized>
            <QuizTable></QuizTable>
        </Authorized>
        <NotAuthorized>
            <div class="h-100 m-auto">
                <div class="row w-50">
                    <div class="col-2">
                        <span class="fs-5">Code</span>
                    </div>
                    <div class="col">
                        <input class="form-control-lg" type="text" />
                    </div>
                    <div class="col-3">
                        <button class="btn btn-lg btn-primary">Play Quiz</button>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>