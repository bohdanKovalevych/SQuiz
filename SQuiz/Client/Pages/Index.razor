@page "/"
@using SQuiz.Shared.Models
@using SQuiz.Client.Shared.Components
@using SQuiz.Client.Pages.EditQuizSteps
@inject HttpClient Http

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>


<CreateQuizSteps></CreateQuizSteps>
<SurveyPrompt Title="How is Blazor working for you?" />

@code {
    public Quiz QuizModel = new Quiz();
    public string text = "";
    private StepItem? questionStepItem;

    public async Task SaveQuiz() 
    {
        var result = await Http.PostAsJsonAsync("Quizzes", QuizModel);
        
        text = $"{result.StatusCode}";
    }
}