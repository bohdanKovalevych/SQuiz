@using SQuiz.Client.Interfaces
@inject NavigationManager Nav
@inject IInitGameService InitGameService

<MudGrid Justify="Justify.Center">
    <MudItem lg="6" md="9" sm="12" >
        <MudPaper Elevation="0" Class="d-flex flex-column justify-space-between gap-9">
            <MudNumericField 
                @bind-Value="shortId" 
                Margin="Margin.None"
                Variant="Variant.Outlined" 
                Label="Code" />
            <MudButton
                Size="Size.Large"
                Variant="Variant.Filled" 
                Color="Color.Primary" 
                @onclick="PlayQuiz">Play Quiz</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>


@code {
    public int? shortId;
    
    public async Task PlayQuiz()
    {
        if (shortId is int notNullShortId)
        {
            await InitGameService.ChooseGameCode(notNullShortId);
        }
    }
}